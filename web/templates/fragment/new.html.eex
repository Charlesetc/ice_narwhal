<h1>New Fragment</h1>

<%= form_for @changeset, fragment_path(@conn, :create), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>There are some errors</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= text_input f, :label, placeholder: "Fragment name",
                              class: "form-control" %>
    <%= error_tag f, :label %>
  </div>

  <%= submit "Create Fragment", class: "btn btn-primary" %>
<% end %>
