
<h1>Login</h1>

<%= form_for @conn, session_path(@conn, :create),
                                          [as: :session], fn f -> %>
  <div class="form-group">
    <%= text_input f, :tag, placeholder: "Tag",
                              class: "form-control" %>
  </div>
  <div class="form-group">
    <%= password_input f, :password, placeholder: "Password",
                                     class: "form-control" %>
  </div>

  <%= submit "Login", class: "btn btn-primary" %>
<% end %>
